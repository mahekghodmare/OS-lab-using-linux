#include <stdio.h>

int main() {
    int n, i, j;
    
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int pid[n], at[n], bt[n], priority[n];
    int ct[n], wt[n], tat[n];
    int completed[n];

    for(i = 0; i < n; i++) {
        completed[i] = 0;
    }

    // Input
    for(i = 0; i < n; i++) {
        pid[i] = i + 1;
        printf("\nProcess P%d\n", pid[i]);
        printf("Arrival Time: ");
        scanf("%d", &at[i]);
        printf("Burst Time: ");
        scanf("%d", &bt[i]);
        printf("Priority: ");
        scanf("%d", &priority[i]);
    }

    int time = 0, count = 0;
    
    while(count < n) {
        int highest = -1;
        int min_priority = 9999;

        // Find highest priority process that has arrived
        for(i = 0; i < n; i++) {
            if(at[i] <= time && completed[i] == 0) {
                if(priority[i] < min_priority) {
                    min_priority = priority[i];
                    highest = i;
                }
            }
        }

        if(highest != -1) {
            time += bt[highest];
            ct[highest] = time;
            tat[highest] = ct[highest] - at[highest];
            wt[highest] = tat[highest] - bt[highest];
            completed[highest] = 1;
            count++;
        } else {
            time++;  // If no process has arrived
        }
    }

    float avg_wt = 0, avg_tat = 0;

    printf("\nProcess\tAT\tBT\tPriority\tCT\tTAT\tWT\n");

    for(i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t\t%d\t%d\t%d\n",
               pid[i], at[i], bt[i], priority[i],
               ct[i], tat[i], wt[i]);

        avg_wt += wt[i];
        avg_tat += tat[i];
    }

    printf("\nAverage Waiting Time = %.2f", avg_wt / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
